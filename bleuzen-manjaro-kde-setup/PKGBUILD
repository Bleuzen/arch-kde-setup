depends=("pamac"
         "pamac-tray-appindicator"
         "bash"
         "bash-completion"
         "kconfig" # used for apply-bleuzen-kde-user-config script
         "neofetch"
         "python"
         "xdg-desktop-portal-kde"
         "flatpak"
         "rsync"
         "xorg-xrandr"
         "htop"
         "flac" "lame" "vorbis-tools" "opus-tools"
         "pavucontrol-qt"
         "materia-gtk-theme" "materia-kde" "kvantum-theme-materia" "papirus-icon-theme"
         "libreoffice-fresh" "libreoffice-fresh-de" "hunspell" "hunspell-de"
         "vlc"
         "gnome-calculator" # Used in a shortcut
         )
optdepends=("pacserve"
            "proaudio-meta"
            "chromium"
            "latte-dock"
            "gimp"
            "audacity"
            "obs-studio"
            "redshift" "plasma5-applets-redshift-control"
            "gnome-disk-utility"
            "ffaudioconverter"
            "kid3"
            "zsh" "zsh-autosuggestions" "zsh-completions" "manjaro-zsh-config"
            "keepassxc"
            "wine" "wine-mono" "wine_gecko" "winetricks" "vkd3d" "lib32-vkd3d"
            "youtube-dl"
            "telegram-desktop"
            "lutris" "lib32-vulkan-icd-loader" "lib32-gnutls" "lib32-libldap" "lib32-libgpg-error" "lib32-sqlite"
            "testdisk"
            "lollypop"
            "kdenlive"
            "shotcut"
            "pulseeffects"
            "gstreamer-vaapi" "libvdpau-va-gl" "libva" "libva-vdpau-driver" "libva-intel-driver" "libva-mesa-driver"
            "kcm-wacomtablet"
            "flameshot"
            )
conflicts=("octopi" "octopi-notifier-frameworks" "octopi-repoeditor" "alpm-octopi-utils"
           "yaourt"
           "vlc-nightly"
           "libreoffice-still" "libreoffice-still-de"
           )
install=$pkgname.install

package() {
  # Copy scripts
  mkdir -p "$pkgdir/usr/bin/"
  for file in "$srcdir/scripts/*"
  do
    install -m755 $file "$pkgdir/usr/bin/"
  done

  # Copy hotkeys
  mkdir -p "$pkgdir/usr/share/khotkeys/"
  install "$srcdir/bleuzensshortcuts.khotkeys" "$pkgdir/usr/share/khotkeys/"
}
